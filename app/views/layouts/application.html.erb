<!DOCTYPE html>
<html>
  <head>
    <title>Bookstore</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class='<%= controller.controller_name %>'>

  <div id="banner">
    <%= image_tag("logo.png") %>
    <%= @page_title || "Potsdam BookStore" %>
  </div>
  <div id="columns">
    <div id="side">
      <p><%= l @date_loaded , :format => :short%></p>
      <ul>
        <li><a href="http://www.google.com">Home</a></li>
        <li><a href="http://127.0.0.1:3000/store/index">Questions</a></li>
        <li><%= link_to 'Catalogy', store_index_url %></li>
        <li><a href="http://www..../news">News</a></li>
        <li><%= link_to 'Contact Us', store_contact_url %></li>
       </ul>
      </div>
     <div id="main">
      <%= yield %>
    </div>
  </div>
  </body>
</html>

