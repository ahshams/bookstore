<!DOCTYPE html>
<html>
  <head>
    <title>Bookstore</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class='<%= controller.controller_name %>'>

  <div id="banner">
    <%= image_tag("logo.png") %>
    <%= @page_title || "Potsdam BookStore" %>
  </div>
  <div id="columns">
    <div id="side">
      <p><%= l @date_loaded , :format => :short%></p>
      <ul>
        <li><%= link_to 'Home', store_index_url %></li>
        <li><%= link_to 'Catalogy', store_index_url %></li>
        <li><%= link_to 'About Us', store_about_path%></li>
        <li><%= link_to 'Discounts' %></li>
        <li><%= link_to 'Contact Us', store_contact_url %></li>
       </ul>
      </div>
     <div id="main">
      <%= yield %>
    </div>
  </div>
  </body>
</html>
